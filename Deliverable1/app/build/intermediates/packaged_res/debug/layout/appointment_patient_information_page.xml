<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/rejectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="112dp"
        android:backgroundTint="#F44336"
        android:text="Reject"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />

    <Button
        android:id="@+id/approveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:text="Approve"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rejectButton"
        app:layout_constraintHorizontal_bias="0.681"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.968" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="393dp"
        android:layout_height="486dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/approveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="363dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/firstNameTag"
                android:layout_width="153dp"
                android:layout_height="match_parent"
                android:text="First Name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/firstName"
                android:layout_width="257dp"
                android:layout_height="58dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lastNameTag"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:text="Last Name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lastName"
                android:layout_width="226dp"
                android:layout_height="58dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/emailTag"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:text="Email Address"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="58dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <TextView
                android:id="@+id/phoneTag"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:text="Phone Number"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="58dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/addressTag"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:text="Address"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="58dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/healthCardTag"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:text="Health Card Number"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/healthCardNumber"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:visibility="visible" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/patientInfo"
        android:layout_width="324dp"
        android:layout_height="38dp"
        android:text="Patient Information"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
